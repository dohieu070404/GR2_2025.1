# Server
PORT=3000
CORS_ORIGIN=*

# JWT
JWT_SECRET=change_me_to_a_long_random_secret
JWT_EXPIRES_IN=7d

# MySQL (Prisma)
# Format: mysql://USER:PASSWORD@HOST:PORT/DBNAME
DATABASE_URL=mysql://smarthome:smarthome123@localhost:3307/smarthome

# MQTT
MQTT_URL=mqtt://localhost:1883
MQTT_USERNAME=smarthome
MQTT_PASSWORD=smarthome123
MQTT_CLIENT_ID=smarthome-backend

# Command tracking
# Mark PENDING commands as TIMEOUT after this many ms (default: 10000)
COMMAND_TIMEOUT_MS=10000
# Sweep interval in ms (default: 2000)
COMMAND_SWEEP_INTERVAL_MS=2000

# Zigbee hub (MQTT topic root: home/hub/<hubId>/zigbee/...)
ZIGBEE_HUB_ID=hub-<macSuffix>


# Logs & OTA artifacts
LOG_DIR=./logs
OTA_DIR=./ota

# State history pruning
STATE_HISTORY_MAX_DAYS=30
STATE_HISTORY_PRUNE_INTERVAL_MS=21600000
